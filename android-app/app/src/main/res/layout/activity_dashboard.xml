<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.byobgyn.byothermostat.DashboardActivity">

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/default_text"
        android:textSize="80sp"
        android:textAlignment="center"
        android:layout_weight="5"
        android:paddingTop="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fanStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fan_on"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/acStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/snowflake_icon"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/heatStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fire_icon"
            android:visibility="gone"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/sbSetTemp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:progressDrawable="@drawable/temp_set_progress"
        android:thumb="@drawable/temp_set_thumb_selector"
        android:progress="70"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/systemMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/modeOff"
            style="@style/RadioStyle"
            android:checked="true"
            android:text="Auto"
            android:tag="0"/>
        <RadioButton
            android:id="@+id/modeAuto"
            style="@style/RadioStyle"
            android:text="Fan"
            android:tag="1"/>
        <RadioButton
            android:id="@+id/modeAir"
            style="@style/RadioStyle"
            android:text="AC"
            android:tag="2"/>
        <RadioButton
            android:id="@+id/modeHeat"
            style="@style/RadioStyle"
            android:text="Heat"
            android:tag="3"/>
    </RadioGroup>
</LinearLayout>
